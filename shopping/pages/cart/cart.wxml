<view class="main">
  <view wx:if="{{hasList}}">
    <view class="cart-box">
        <view class="cart-list" wx:for="{{carts}}" wx:key="{{item.id}}">
            <!-- <icon type="{{item.selected ? 'success' : 'circle'}}"/> -->
            <icon wx:if="{{item.selected}}" type="success" color="red" data-index="{{index}}" class="cart-pro-select"
             bindtap="selectedList" />
            <icon wx:else type="circle" class="cart-pro-select" data-index="{{index}}" bindtap="selectedList"/>
            <navigator url="../details/details?id={{item.id}}">
            <image src="{{item.image}}" class="cart-thumb"/>
            </navigator>
            <text class="cart-pro-name">{{item.name}}</text>
            <text class="cart-pro-price">{{item.price}}</text>
            <view class="cart-count-box">
                <text class="cart-count-down" bingtap="minusCount" data-index="{{index}}">-</text>
                <text class="cart-count-num">{{item.num}}</text>
                <text class="cart-count-add" bingtap="addCount" data-index="{{index}}">+</text>
                <text class="cart-del" bindtap="deleteList" data-index="{{index}}">删除</text>
            </view>
            
        </view>
        <view class="cart-footer">
            <icon class="total-select" type="success" wx:if="{{selectAllstatus}}" color="red" bindtap="selectAll"></icon>
            <icon class="total-select" type="circle" wx:else="{{selectAllstatus}}" color="green" bindtap="selectAll"></icon>
            <text>全选</text>
            <text class="cart-total-price">￥{{totalPrice}}</text>
        </view>
    </view>
  </view>
  <view wx:else>
    <view class="cart-no-data">购物车是空的哦</view>
  </view>
</view>
